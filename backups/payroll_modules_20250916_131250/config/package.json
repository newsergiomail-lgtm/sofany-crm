{
  "name": "sofany-crm",
  "version": "1.0.0",
  "description": "CRM система для мебельного производства Sofany",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "start": "./start-all.sh",
    "stop": "./stop-all.sh",
    "server": "./start-server.sh",
    "client": "./start-client.sh",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "db:migrate": "cd server && npm run db:migrate",
    "db:seed": "cd server && npm run db:seed",
    "clean": "./stop-all.sh && rm -rf client/node_modules server/node_modules client/package-lock.json server/package-lock.json",
    "setup": "npm run install:all && npm run db:migrate && npm run db:seed"
  },
  "keywords": [
    "crm",
    "furniture",
    "production",
    "sofany"
  ],
  "author": "Sofany Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "canvas": "^3.2.0",
    "date-fns": "^4.1.0",
    "form-data": "^4.0.4",
    "node-fetch": "^2.7.0",
    "qrcode": "^1.5.4"
  }
}
